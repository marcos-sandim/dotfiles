[module/keyboardvariant]
type = custom/script

# exec = setxkbmap -query | (grep variant || printf "\n") | sed -E 's/variant:\s*(.*)/[\1]/'
exec = setxkbmap -query | (grep -E '(layout|variant)' || printf "\n") | sed -E 's/layout:\s*(.*)/\1 /' | sed -E 's/variant:\s*(.*)/[\1]/ ' | tr -d "\n"
interval = 5

format-prefix = " "
format-underline = ${colors.secondary}
format-prefix-foreground = ${colors.foreground-alt}

